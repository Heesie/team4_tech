<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recepten</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #ccc;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        main {
            padding: 20px;
        }

        .recept {
            gap: 15px;
            margin-top: 20px;
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .recept h3 {
            margin-top: 10px;
            font-size: 18px;
            font-weight: bold;
        }

        .recept h4 {
            font-size: 16px;
            margin-top: 10px;
        }

        .recept p {
            font-size: 14px;
            color: #555;
        }

        .recept button {
            background-color: darkgreen;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
        }

        .recept button:hover {
            background-color: orange;
        }

        .recept-afbeelding {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <header>
     
    </header>

    <main>
        <section class="recept">
            <% if (recipes && recipes.length > 0) { %>
                <div>
                    <% let recipe = recipes[0]; %> <!-- Alleen het eerste recept wordt getoond -->
                    <% if (recipe.imageUrl) { %>
                        <img src="<%= recipe.imageUrl %>" alt="Afbeelding van <%= recipe.name %>" class="recept-afbeelding">
                    <% } else { %>
                        <img src="/images/default-recipe.jpg" alt="Geen afbeelding beschikbaar" class="recept-afbeelding">
                    <% } %>
                    <h3><%= recipe.name %></h3>
                    <h4>Stappen om te koken:</h4>
                    <% if (recipe.steps && recipe.steps.length > 0) { %>
                        <ul>
                            <% recipe.steps.forEach(step => { %>
                                <li><%= step %></li> <!-- Toon de kookstappen -->
                            <% }) %>
                        </ul>
                    <% } else { %>
                        <p>Geen kookstappen beschikbaar.</p>
                    <% } %>
                    <button>Recept Opslaan</button>
                </div>
            <% } else { %>
                <p>Geen recepten gevonden.</p>
            <% } %>
        </section>
    </main>
</body>
</html>
