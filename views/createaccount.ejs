<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create account</title>
    <link rel="stylesheet" href="/styles/basis.css">
    <link rel="stylesheet" href="/styles/createAccount.css">
</head>
<body>

    <%- include('header') %>

    
    <section class="wrapper">
        <main class="mainForm">
            <h2>Create account</h2>
            <p>Het wachtwoord moet minimaal 8 tekens zijn en 1 hoofdletter en cijfer</p>

                <form action="/createAccount" method="POST">
                    <% if (errorMessage) { %>
                        <div class="error">
                            <%= errorMessage %>
                        </div>
                    <% } %>

                    <label for="username">Username</label>
                    <button type="button" onclick="generateRandomUsername()">Generate a random name</button>
                    <input type="text" id="username" name="username" placeholder="Username..." value="<%= username %>" required/>
                            
                    <label for="email">Email address</label>
                    <input type="email" id="email" name="email" placeholder="Email address..." value="<%= email %>" required/>

                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Password..." required>

                    <label for="passwordConfirm">Confirm password</label>
                    <input type="password" id="passwordConfirm" name="passwordConfirm" placeholder="Confirm password..." required>

                    <input type="submit" value="Create account">
                </form>

                <p>Already have an account? <a href="/login">Log in</a></p>
                    
        </main>
    </section>
    

    <script>
        // Genereer een willekeurige gebruikersnaam
        function generateRandomUsername() {
            const username = 'user' + Math.floor(Math.random() * 1000);
            document.getElementById('username').value = username;
        }
    </script>
</body>
</html>