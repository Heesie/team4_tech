  margin-top: 1em;
  cursor: pointer;
}

.filter-begin li:hover {
  background-color: #ff0000;
}


h1 {
  color: #444;
  margin-bottom: 10px;
}

h1 + p {
  font-weight: bold;
}

p {
  margin: 11px 0;
  color: rgb(0, 0, 0);
}

ul {
  list-style: none;
  padding: 0;
  max-width: max-content;
}

li {
  background: rgb(255, 117, 117);
  margin: 5px 0;
  padding: 10px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  gap: 10px;
}

li img {
  width: auto;
  height: 3em;
  border-radius: 5px;
}


ul.italiaans li:not(.italiaans),
ul.mexicaans li:not(.mexicaans),
ul.japans li:not(.japans) {
  display: none;
}

</style>
