<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recepten</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #ffefca;
            margin: 0;
            padding: 0;
        }
  
        main {
            padding: 20px;
        }
        .search-bar input {
            width: 80%;
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        .search-bar button {
            padding: 5px 10px;
            border: none;
            background-color: #578A37;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }


        .filterbuttons {
            list-style-type: none;
            display: flex;
            justify-content: center;
            gap: 20px;
            padding: 0;
        }
        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown button {
            background-color: #FF3D00;
            color: white;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            border-radius: 8px;
        }
        .dropdown .content {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            min-width: 150px;
            box-shadow: 2px 2px 5px black;
            background-color: #f1f1f1;
            z-index: 100;
            padding: 0;
        }
        
        .dropdown .content li {
            list-style-type: none;
        }

        .dropdown .content a {
            display: block;
            text-decoration: none;
            padding: 10px;
            color: black;
            background-color: white;
            transition: background 0.3s;
        }

        .dropdown .content a:hover {
            background-color: lightgray;
        }
        
        /* Gebruik :focus-within om menu te openen bij klikken */
        .dropdown:focus-within .content {
            display: block;
        }

        .recept-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }
        .recept {
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .recept h3 {
            margin-top: 10px;
            font-size: 18px;
            font-weight: bold;
        }
        .recept p {
            font-size: 14px;
            color: #555;
        }
        .recept button {
            background-color: #578A37;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
        }
        .recept button:hover {
            background-color: orange;
        }

        .recept-afbeelding {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 10px;
}

    </style>
</head>
<body>
        <%- include('header') %>
    <main>
        <div class="search-bar">
            <form action="/search" method="GET">
                <input type="text" name="q" placeholder="Voer een ingrediÃ«nt in...">
                <button type="submit">Zoeken</button>
            </form>
        </div>
                 <p>Filteren:</p>   
            <ul class="filterbuttons">
                <li>
                    <div class="dropdown" tabindex="0">
                        <button>Keuken</button>
                        <ul class="content">
                            <li><a href="#">Italiaans</a></li>
                            <li><a href="#">Spaans</a></li>
                            <li><a href="#">Mexicaans</a></li>
                            <li><a href="#">Aziatisch</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <div class="dropdown" tabindex="0">
                        <button>Dieet</button>
                        <ul class="content">
                            <li><a href="#">Glutenvrij</a></li>
                            <li><a href="#">Lactosevrij</a></li>
                            <li><a href="#">Vegetarisch</a></li>
                            <li><a href="#">Veganistisch</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <div class="dropdown" tabindex="0">
                        <button>Bereidingstijd</button>
                        <ul class="content">
                            <li><a href="#">Ongeveer 15 min</a></li>
                            <li><a href="#">Ongeveer 20 min</a></li>
                            <li><a href="#">Ongeveer 30 min</a></li>
                            <li><a href="#">Ongeveer 60 min</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <div class="dropdown" tabindex="0">
                        <button>Meer</button>
                        <ul class="content">
                            <li><a href="#">Optie 1</a></li>
                            <li><a href="#">Optie 2</a></li>
                            <li><a href="#">Optie 3</a></li>
                            <li><a href="#">Optie 4</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
            
            <h2>Recepten:</h2>
            
      
  
        <section class="recept-grid">
            <% if (recipes && recipes.length > 0) { %>
                <% recipes.forEach(recipe => { %>
                    <div class="recept">
                        <% if (recipe.imageUrl) { %>
                            <img src="<%= recipe.imageUrl %>" alt="Afbeelding van <%= recipe.name %>" class="recept-afbeelding">
                        <% } else { %>
                            <img src="/images/default-recipe.jpg" alt="Geen afbeelding beschikbaar" class="recept-afbeelding">
                        <% } %>
                        <h3><%= recipe.name %></h3>
                        <p><%= recipe.description || 'Geen beschrijving beschikbaar' %></p>
                        <button onclick="window.location.href='/recipe/<%= recipe.id %>'">Bekijk Recept</button>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Geen recepten gevonden.</p>
            <% } %>
        </section>
    </main>
    <footer>
        <%- include('footer') %>
    </footer>
</body>
</html>
