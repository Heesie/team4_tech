<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recepten</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
  
        main {
            padding: 20px;
        }
        .search-bar input {
            width: 80%;
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        .search-bar button {
            padding: 5px 10px;
            border: none;
            background-color: darkgreen;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }
        .recept-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }
        .recept {
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .recept h3 {
            margin-top: 10px;
            font-size: 18px;
            font-weight: bold;
        }
        .recept p {
            font-size: 14px;
            color: #555;
        }
        .recept button {
            background-color: darkgreen;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
        }
        .recept button:hover {
            background-color: orange;
        }
    </style>
</head>
<body>
    <header>
        <%- include('header') %>
    </header>
    
    <main>
        <div class="search-bar">
            <form action="/search" method="GET">
                <input type="text" name="q" placeholder="Voer een ingrediÃ«nt in...">
                <button type="submit">Zoeken</button>
            </form>
        </div>
        
        <h2>Gevonden Recepten:</h2>
            
            <ul class="filterbuttons">
                <li>
                    <div class="dropdown" tabindex="0">
                        <button>Keuken</button>
                        <ul class="content">
                            <li><a href="#">Italiaans</a></li>
                            <li><a href="#">Spaans</a></li>
                            <li><a href="#">Mexicaans</a></li>
                            <li><a href="#">Aziatisch</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <div class="dropdown" tabindex="0">
                        <button>Dieet</button>
                        <ul class="content">
                            <li><a href="#">Glutenvrij</a></li>
                            <li><a href="#">Lactosevrij</a></li>
                            <li><a href="#">Vegetarisch</a></li>
                            <li><a href="#">Veganistisch</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <div class="dropdown" tabindex="0">
                        <button>Bereidingstijd</button>
                        <ul class="content">
                            <li><a href="#">Ongeveer 15 min</a></li>
                            <li><a href="#">Ongeveer 20 min</a></li>
                            <li><a href="#">Ongeveer 30 min</a></li>
                            <li><a href="#">Ongeveer 60 min</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <div class="dropdown" tabindex="0">
                        <button>Meer</button>
                        <ul class="content">
                            <li><a href="#">Optie 1</a></li>
                            <li><a href="#">Optie 2</a></li>
                            <li><a href="#">Optie 3</a></li>
                            <li><a href="#">Optie 4</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
            
            <h2>Recepten:</h2>
            
            <section class="recept-grid">
                <div class="recept">
                    <h3>Pasta</h3>
                    <p>beschrijving</p>
                    <button>Bekijk Recept</button>
                </div>
    
                <div class="recept">
                    <h3>Pizza</h3>
                    <p>beschrijving</p>
                    <button>Bekijk Recept</button>
                </div>
    
                <div class="recept">
                    <h3>Sushi</h3>
                    <p>beschrijving</p>
                    <button>Bekijk Recept</button>
                </div>
    
                <div class="recept">
                    <h3>Wok</h3>
                    <p>beschrijving</p>
                    <button>Bekijk Recept</button>
                </div>
    
                <div class="recept">
                    <h3>iets</h3>
                    <p>beschrijving</p>
                    <button>Bekijk Recept</button>
                </div>
    
                <div class="recept">
                    <h3>Iets2</h3>
                    <p>beschrijving</p>
                    <button>Bekijk Recept</button>
                </div>
            </section>
  
        <section class="recept-grid">
            <% if (recipes && recipes.length > 0) { %>
                <% recipes.forEach(recipe => { %>
                    <div class="recept">
                        <h3><%= recipe.name %></h3>
                        <p><%= recipe.description || 'Geen beschrijving beschikbaar' %></p>
                        <button onclick="window.location.href='/recipe/<%= recipe.id %>'">Bekijk Recept</button>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Geen recepten gevonden.</p>
            <% } %>
        </section>
    </main>
    <footer>
        <%- include('footer') %>
    </footer>
</body>
</html>
