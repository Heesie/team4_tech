<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favorites</title>
    <link rel="stylesheet" href="/styles/favorites.css">
    <link rel="stylesheet" href="/styles/recipes.css">

    <link rel="stylesheet" href="/styles/basis.css">
</head>
<body>
    
    <%- include('header') %>

    <div class="search-bar">
        <h1>Your Favorites</h1>
        <form action="/recipes" method="GET">
            <input type="text" name="q" placeholder="Zoek een gerecht..." required>
            <button type="submit">Search</button>
        </form>
    </div>

    <section class="recept-grid">
        <% if (recipes && recipes.length > 0) { %>
          <% recipes.forEach(recipe => { %>
            <div class="recept">
              <img src="<%= recipe.thumbnail_url || '/images/default-recipe.jpg' %>" alt="Gerecht afbeelding" class="recept-afbeelding">
              <h3><%= recipe.name %></h3>
              <!-- Verwijder favoriet knop -->
              <form action="/toggle-like/<%= recipe._id %>" method="POST" class="like-form">
                <input type="hidden" name="recipeId" value="<%= recipe._id %>">
                <button type="submit" class="like-button">
                </button>
              </form>
              <a href="/recipe/<%= recipe._id %>">
                <button>Full Recipe</button>
              </a>
            </div>
          <% }) %>
        <% } else { %>
          <p>Geen favorieten beschikbaar.</p>
        <% } %>
      </section>
</body>
</html>
