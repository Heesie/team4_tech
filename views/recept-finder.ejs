<script>
  // Gedeelte hier onder is van de filter lijst met categorien
  document.getElementById("filter-submit").addEventListener("click", () => {
    const selectedFilters = Array.from(document.querySelectorAll("input[name='filter']:checked"))
        .map(input => input.value);
    console.log("Geselecteerde filters zijn:", selectedFilters);
   
});

// gedeelte hier onder is van de pop up
window.addEventListener("load", function() {
    setTimeout(function() {
        document.querySelector(".pop-up").classList.add("show");
    },2000);  
});

document.getElementById("close").addEventListener("click", function() {
    document.querySelector(".pop-up").classList.remove("show");
});



</script>



</html>
