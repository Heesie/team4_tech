<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recepten</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #ccc;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        main {
            padding: 20px;
        }
        .search-bar input {
            width: 80%;
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        .search-bar button {
            padding: 5px 10px;
            border: none;
            background-color: darkgreen;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }
        .recept-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }
        .recept {
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .recept h3 {
            margin-top: 10px;
            font-size: 18px;
            font-weight: bold;
        }
        .recept p {
            font-size: 14px;
            color: #555;
        }
        .recept button {
            background-color: darkgreen;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
        }
        .recept button:hover {
            background-color: orange;
        }
    </style>
</head>
<body>
    <header>
        <button>&#9776;</button>
        <h1>Logo</h1>
        <button>&#128100;</button>
    </header>
    
    <main>
        <div class="search-bar">
            <form action="/search" method="GET">
                <input type="text" name="q" placeholder="Voer een ingrediÃ«nt in...">
                <button type="submit">Zoeken</button>
            </form>
        </div>
        
        <h2>Gevonden Recepten:</h2>
        
        <section class="recept-grid">
            <% if (recipes && recipes.length > 0) { %>
                <% recipes.forEach(recipe => { %>
                    <div class="recept">
                        <h3><%= recipe.name %></h3>
                        <p><%= recipe.description || 'Geen beschrijving beschikbaar' %></p>
                        <button onclick="window.location.href='/recipe/<%= recipe.id %>'">Bekijk Recept</button>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Geen recepten gevonden.</p>
            <% } %>
        </section>
    </main>
</body>
</html>
